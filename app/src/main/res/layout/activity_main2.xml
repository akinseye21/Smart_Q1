<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_gradient"
    tools:context="com.example.ndif_yemmanuel.smart_q.MainActivity2">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="60dp"
        android:id="@+id/img1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img1"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:id="@+id/txt"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:background="@drawable/edittext"
        android:layout_below="@+id/txt"
        android:id="@+id/edittxt1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/edittxt1"
        android:id="@+id/emptytxt"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:id="@+id/edittxt2"
        android:background="@drawable/edittext"
        android:layout_below="@+id/emptytxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/edittxt2"
        android:id="@+id/emptytxt2"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnlogin"
        android:layout_alignStart="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#ffffff"
        android:progressDrawable="@drawable/circular_progress_view" />


    <Button
        android:onClick="ShowPopUp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="LOGIN"
        android:textColor="#693aac"
        android:id="@+id/btnlogin"
        android:layout_below="@+id/emptytxt2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I forgot my password"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnlogin"
        android:padding="20dp"
        android:id="@+id/txt3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account yet?"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/txt3"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt4"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Sign up for FREE"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/txt4"
        android:background="@drawable/button2"
        android:id="@+id/btnsignup"/>

</RelativeLayout>

</ScrollView>