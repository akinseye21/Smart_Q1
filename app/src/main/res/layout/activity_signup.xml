<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="com.example.ndif_yemmanuel.smart_q.signup">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:id="@+id/a"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up for FREE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_below="@+id/a"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:id="@+id/b"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext"
        android:hint="First name"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/edt_first_name"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext"
        android:hint="Last name"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/edt_last_name"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/edtname"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext"
        android:hint="Username"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/edt_user_name"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext"
        android:hint="Phone"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/edtphone"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext"
        android:hint="Email"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/edtemail"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:textSize="15dp"
        android:id="@+id/edtpassword"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#ffffff"
        android:progressDrawable="@drawable/circular_progress_view" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="SIGN UP"
        android:textColor="#693aac"
        android:background="@drawable/button"
        android:id="@+id/btnsignup2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Login to access it"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/button2"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/btnlogin2"/>

</LinearLayout>
</ScrollView>