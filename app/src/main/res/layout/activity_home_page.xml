<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.ndif_yemmanuel.smart_q.HomePage">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="#563ba6"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:textStyle="bold"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........."
        android:layout_below="@+id/textView"
        android:textColor="#f80707"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/namepassed"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like"
        android:textColor="#563ba6"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/namepassed"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to do today?"
        android:textColor="#563ba6"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="1dp"
        android:textStyle="bold"
        android:id="@+id/todotoday"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I want to register \n to access health \n care"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:textAllCaps="false"
        android:drawableTop="@drawable/hospital"
        android:background="@drawable/homebutton"
        android:id="@+id/btnaccesshealthcare"
        android:layout_alignTop="@+id/btnaccessconsultation" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I want access to \n Consultation \n services"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="200dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:textAllCaps="false"
        android:drawableTop="@drawable/doctor"
        android:background="@drawable/homebutton"
        android:id="@+id/btnaccessconsultation"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="59dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do I have in \n my Wallet"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="40dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:textAllCaps="false"
        android:drawableTop="@drawable/wallet"
        android:background="@drawable/homebutton"
        android:id="@+id/btnwallet"
        android:layout_alignTop="@+id/btnprofile" />

    <Button
        android:id="@+id/btnprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnaccessconsultation"
        android:layout_alignStart="@+id/btnaccessconsultation"
        android:layout_below="@+id/btnaccessconsultation"
        android:layout_marginTop="12dp"
        android:background="@drawable/homebutton"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/medical"
        android:text="I will like to \n modify my profile"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold" />
    <Button
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="I need some help using this app"
        android:textAllCaps="false"
        android:layout_marginLeft="50dp"
        android:gravity="center_horizontal|center"
        android:background="@drawable/helpbutton"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonhelp" />


</RelativeLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_container"/>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#234d96"
        app:itemTextColor="#fff"
        android:onClick="change"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        android:id="@+id/navigationview">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>